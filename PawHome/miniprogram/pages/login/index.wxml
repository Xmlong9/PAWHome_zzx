<view class="wrap">
  <view class="logo">爱宠家</view>
  <view class="form">
    <input class="input" type="number" maxlength="11" placeholder="手机号" value="{{phone}}" bindinput="onPhone" />
    <view class="row">
      <input class="input code" type="number" maxlength="6" placeholder="验证码" value="{{code}}" bindinput="onCode" />
      <button class="btn shade" bindtap="onSend" disabled="{{smsSending}}">{{smsText}}</button>
    </view>
    <button class="btn primary" bindtap="onLoginSms" disabled="{{logging}}">验证码登录</button>
  </view>
  <view class="or">或</view>
  <button class="btn wechat" bindtap="onWxLogin">一键登录</button>
  <button class="btn shade" bindtap="onSkip">跳过登录（调试）</button>
</view>
