.home{padding-bottom:160rpx}
.header{background:#fff;border-bottom-left-radius:60rpx;border-bottom-right-radius:60rpx;padding:40rpx 32rpx 80rpx 32rpx;color:#222;position:relative}
.header-blob{position:absolute;left:-120rpx;top:-150rpx;width:550rpx;height:380rpx;background:#FF9E59;border-radius:9999rpx;z-index:0}
.brand-row{position:relative;z-index:2}
.search{position:absolute;left:32rpx;right:32rpx;bottom:6rpx;height:140rpx;background:transparent;border-radius:0;padding:0;box-shadow:none;z-index:2;overflow:visible}
.brand-row{display:flex;align-items:center;gap:0}
.brand-icon{display:none}
.brand{font-size:64rpx;font-weight:600;margin-left:5rpx;margin-top:-30rpx;font-family:'PawZKKL', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial !important}
.search{position:absolute;left:32rpx;right:32rpx;bottom:6rpx;height:140rpx;background:transparent;border-radius:0;padding:0;box-shadow:none;z-index:2}
.search-bg{position:absolute;left:200rpx;top:50%;transform:translateY(-52%) scale(1.10);transform-origin:center;width:calc(100% - 200rpx);height:auto;display:block}
.search-field{position:absolute;left:270rpx;right:86rpx;top:50%;transform:translateY(-40%);height:44rpx;line-height:44rpx;border:0;background:transparent;color:#333;font-size:26rpx;text-align:left}

.carousel-row{display:flex;gap:20rpx;align-items:flex-start;padding:24rpx}
.carousel{position:relative}
.swiper{width:460rpx;height:360rpx}
.carousel-card{background:#fff;border-radius:64rpx;width:460rpx;height:360rpx;border:6rpx solid #000;overflow:hidden;padding:0;box-sizing:border-box;position:relative}
.carousel-card{clip-path: inset(0 round 64rpx)}
.carousel-card{box-shadow:12rpx 12rpx 0 #849C4E}
.carousel-img{width:100%;height:100%}
.carousel-img-fill{width:100%;height:100%}
.carousel-img-fit{width:100%;height:100%;transform:scale(1.08) translateY(2%);transform-origin:center}
.card-shadow{position:absolute;width:460rpx;height:360rpx;border-radius:64rpx;background:#849C4E;left:14rpx;top:14rpx;z-index:0}
.carousel-sticker{position:absolute;right:-16rpx;top:-24rpx;width:72rpx;height:72rpx;border-radius:999rpx;z-index:10}
.indicator{position:absolute;left:16rpx;top:50%;transform:translateY(-50%);width:18rpx;height:220rpx;display:flex;flex-direction:column;align-items:center;gap:18rpx;z-index:5}
.indicator .bar{width:12rpx;height:36rpx;border-radius:8rpx;background:#999;opacity:.35}
.indicator .bar.active{background:#333;opacity:1}

.ad-wrap{position:relative;width:220rpx;height:350rpx}
.ad-shadow{position:absolute;width:220rpx;height:350rpx;border-radius:64rpx;background:#849C4E;left:12rpx;top:12rpx;z-index:0}
.ad-card{position:absolute;left:0;top:0;width:220rpx;height:350rpx;background:#FFF9C6;border-radius:64rpx;border:6rpx solid #000;overflow:hidden;box-shadow:12rpx 12rpx 0 #849C4E,0 10rpx 20rpx rgba(0,0,0,0.08);padding:0;display:flex;align-items:center;justify-content:center;z-index:1}
.ad-img{width:100%;height:100%}
.ad-title{display:none}
.ad-sub{display:none}

.hero{display:flex;gap:24rpx;padding:24rpx 24rpx 0 24rpx}
.hero-left{flex:1;background:#fff;border-radius:40rpx;padding:28rpx;box-shadow:0 10rpx 20rpx rgba(0,0,0,0.08);border:8rpx solid #000}
.hero-right{width:280rpx;background:#fff;border-radius:40rpx;padding:24rpx;box-shadow:0 10rpx 20rpx rgba(0,0,0,0.08);border:8rpx solid #000}
.hero-title{font-size:32rpx;color:#333}
.hero-sub{margin-top:12rpx;color:#666}
.hero-action{margin-top:24rpx;background:#98c06d;color:#fff;border-radius:999rpx;padding:14rpx 20rpx;width:220rpx;text-align:center}
.highlight{color:#ff7ab6;margin-left:8rpx}

.services{display:flex;justify-content:space-around;align-items:center;padding:24rpx;border-top:2rpx solid #333;border-bottom:2rpx solid #333;margin:24rpx}
.service-item{display:flex;flex-direction:column;align-items:center;gap:12rpx}
.service-icon{width:96rpx;height:96rpx;border-radius:999rpx}
.service-icon-img{width:96rpx;height:96rpx;border-radius:999rpx}
.service-text{color:#333}
.service-icon.vaccine{background:linear-gradient(180deg,#ffe5e0,#ff9f85)}
.service-icon.beauty{background:linear-gradient(180deg,#ffe8c2,#ffb648)}
.service-icon.medical{background:linear-gradient(180deg,#cfe9ff,#6ab0ff)}
.service-icon.foster{background:linear-gradient(180deg,#dff5ff,#6bd3ff)}

.group1{margin:40rpx 32rpx;position:relative;height:180rpx}
.group1-shadow{position:absolute;inset:0;border-radius:40rpx;background:#849C4E;transform:translate(12rpx,12rpx);z-index:0}
.group1-card{position:relative;background:#ff9ecf;border-radius:40rpx;height:180rpx;display:flex;align-items:center;padding:24rpx 28rpx;gap:24rpx;z-index:1;border:6rpx solid #000}
.group1-left{width:160rpx;height:135rpx}
.group1-desc{flex:1;color:#fff}
.group1-line1{font-size:30rpx;line-height:40rpx}
.group1-line1 .accent{font-weight:700}
.group1-btn{margin-top:12rpx;font-size:28rpx}
.group1-badge{position:absolute;right:16rpx;top:10rpx;background:#fff;color:#666;border-radius:999rpx;padding:4rpx 12rpx;font-size:20rpx}

.group{margin:80rpx 32rpx;position:relative;height:180rpx}
.group-shadow{position:absolute;inset:0;border-radius:32rpx;background:#849C4E;transform:translate(10rpx,10rpx);z-index:0}
.group-card{position:relative;background:#fff;border-radius:32rpx;border:6rpx solid #000;height:180rpx;display:flex;align-items:center;gap:24rpx;padding:24rpx 28rpx;z-index:1}
.group-left{width:160rpx;height:120rpx}
.group-title{flex:1;font-size:30rpx;color:#333}
.group-badge{position:absolute;right:16rpx;top:10rpx;background:#fff;color:#666;border-radius:999rpx;padding:4rpx 12rpx;font-size:20rpx}

.nav-icon-img{width:48rpx;height:48rpx}
